# URLs de los servidores MCP (Reserva y Cita en uso; Venta después)
MCP_RESERVA_URL=http://localhost:8003/mcp
MCP_CITA_URL=http://localhost:8002/mcp
MCP_VENTA_URL=http://localhost:8001/mcp

# Opcional: desactivar llamadas a MCP Reserva (true|false)
MCP_RESERVA_ENABLED=true
MCP_CITA_ENABLED=true
# OpenAI (agente orquestador): gpt-4o-mini | gpt-4o
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Timeout total del flujo chat en segundos (debe ser > OPENAI_TIMEOUT + MCP_TIMEOUT)
# OPENAI_TIMEOUT=60, MCP_TIMEOUT=30 → mínimo recomendado: 100
CHAT_TIMEOUT=120
